# Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api/v1
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=AI Sprint Manager
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered Sprint Management Tool

# Environment
VITE_NODE_ENV=development

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_TIME_TRACKING=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_DRAG_DROP=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Toast Notification Configuration
VITE_TOAST_DURATION=5000
VITE_TOAST_POSITION=top-right

# Development Configuration
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_ERROR_BOUNDARY=true

# Analytics (for future use)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=

# External Services (for future use)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
